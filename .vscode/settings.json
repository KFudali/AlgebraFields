{
    "python.terminal.useEnvFile": true,
    "python.envFile": "${workspaceFolder}/.env",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=build",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (outdir)",
            "tools": ["latexmk"]
        }
    ]
}